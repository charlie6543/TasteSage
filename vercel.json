{
  "version": 2,
  "builds": [
    { "src": "server/index.ts", "use": "@vercel/node" },
    { "src": "client/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.ts" },
    { "src": "/(.*)\\.(tsx|ts)$", "headers": { "Content-Type": "application/javascript" }, "dest": "client/$1.$2" },
    { "src": "/(.*)", "dest": "client/$1" }
  ]
} 