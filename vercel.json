{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/(.*)\\.(?:js|css|ico|png|jpg|jpeg|svg|gif)$",
      "dest": "/dist/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ]
} 